{
  "width": 200,
  "height": 100,
  "signals": [
    { "name": "padding", "bind": { "element": "#padding-range-input" } }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        { "valueForX": "A", "valueForY": 10 },
        { "valueForX": "B", "valueForY": 20 },
        { "valueForX": "C", "valueForY": 30 },
        { "valueForX": "D", "valueForY": 40 }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "valueForX"
      },
      "range": "width",
      "padding": { "signal": "padding" }
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "valueForY"
      },
      "range": "height"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": { "data": "table" },
      "encode": {
        "x": { "scale": "xscale", "field": "valueForX" },
        "y": { "scale": "yscale", "field": "valueForY" },
        "width": { "scale": "xscale", "band": 1 },
        "y2": { "scale": "yscale", "value": 0 },
        "fill": { "value": "steelblue" }
      }
    }
  ]
}
